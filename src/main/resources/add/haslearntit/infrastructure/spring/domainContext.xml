<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:/add/haslearntit/infrastructure/spring/persistenceContext.xml" />

	<bean id="skillsRepository" class="add.haslearntit.infrastructure.hibernate.skills.HibernateSkillsRepository">
		<constructor-arg ref="sessionFactory"/>
	</bean>
	<bean id="usersRepository" class="add.haslearntit.infrastructure.hibernate.user.HibernateUserRepository">
		<constructor-arg ref="sessionFactory"/>
    </bean>
	<bean id="commentRepository" class="add.haslearntit.infrastructure.transients.comments.TransientCommentsRepository">
    </bean>

</beans>